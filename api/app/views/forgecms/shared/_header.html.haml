%body
  %header.main-header
    %nav.navbar.navbar-static-top.navbar-default
      .navbar-brand
        .logo
          ForgeCMS
        .sidebar-toggle
          %span
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown.user-dropdown
          =link_to '#', { class: 'dropdown-toggle', data: { toggle: 'dropdown' } } do
            =image_tag 'https://s3.amazonaws.com/uifaces/faces/twitter/jonohunt/128.jpg'
            %span.user-name= current_user.first_name
            %span.caret
          %ul.dropdown-menu
            %li= link_to 'Profile', '#'
            %li= link_to 'Logout', logout_path